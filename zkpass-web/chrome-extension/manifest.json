{
  "manifest_version": 3,
  "name": "ZK-Pass Verifier",
  "version": "1.0",
  "description": "Privacy-first age verification using ZK-Pass hardware wallet",
  "permissions": ["storage", "activeTab"],
  "host_permissions": ["http://localhost:5000/"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"]
  }],
  "action": {
    "default_popup": "popup.html",
    "default_title": "ZK-Pass"
  }
}